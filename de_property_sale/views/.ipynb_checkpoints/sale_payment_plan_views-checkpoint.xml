<odoo>
    <data>
        
        <record id="view_payment_plan_tree_view" model="ir.ui.view">
        <field name="name">view.payment.plan.tree.view</field>
        <field name="model">sale.payment.plan</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <tree string="Payment Plan" >
                <field name="active" invisible="1"/>
                <field name="name" />
            </tree>
        </field>
        </record>
        
        <record id="view_payment_plan_form_view" model="ir.ui.view">
            <field name="name">view.payment.plan.form.view</field>
            <field name="model">sale.payment.plan</field>
            <field name="arch" type="xml">
                <form string="Payment Plan">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Description" />
                            <h1><field name="name" placeholder="e.g. 12 Installment"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="type" widget="radio"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Installments" name="installment">
                                <field name="line_ids" nolabel="1" >
                                    <tree string="Installment Lines" editable="bottom" >
                                        <field name="sequence" widget="handle"/>
                                        <field name="name" />
                                        <field name="days" />
                                        <field name="payment_plan_id" invisible="1" />
                                        <field name="amount" />
                                        <field name="is_downpayment" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group class="oe_subtotal_footer oe_right" colspan="2" name="installment_total">
                            <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                <label for="amount_percent"/>
                            </div>
                        
                            <field name="amount_percent" nolabel="1" class="oe_subtotal_footer_separator"/>
                        <!--
                        <field name="amount_residual" class="oe_subtotal_footer_separator"
                                       attrs="{'invisible': [('state', 'not in', ('post', 'done'))]}"/>
-->
                        </group>
                    </sheet>
                    
                </form>
            </field>
        </record>
        
        <record id="action_sales_payment_plan" model="ir.actions.act_window">
            <field name="name">Payment Plan</field>
            <field name="res_model">sale.payment.plan</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No payment plan found. Let's create one!
              </p>
            </field>
        </record>
        
        <menuitem id="sales_payment_plan_config" name="Payment Plan" parent="de_property.menu_property_config" action="action_sales_payment_plan" sequence="20"/>
    </data>
</odoo>