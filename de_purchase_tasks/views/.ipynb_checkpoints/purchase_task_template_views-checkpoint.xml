<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_task_template_view_search" model="ir.ui.view">
        <field name="name">purchase.task.template.search</field>
        <field name="model">purchase.task.template</field>
        <field name="arch" type="xml">
            <search string="Search Task Template">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="purchase_task_template_view_form" model="ir.ui.view">
        <field name="name">purchase.task.template.form</field>
        <field name="model">purchase.task.template</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Task Template">
                <sheet>
                    <div name="button_box" class="oe_button_box"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Purchase Task Template"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="requisition_type_id" />
                            <field name="sequence" />
                            <field name="allow_picking" />
                            <field name="allow_invoice" />
                        </group>
                        <group>
                            <field name="user_id" widget="many2one_avatar_user"/>
                            <field name="completion_days" sting="Completion Days(From PO)"/>
                            <field name="approval_days" sting="Approval Days"/>
                            <field name="completion_percent" />
                            <field name="stage_ids" widget="many2many_tags" domain="[('allow_milestone','=',True)]" options="{'no_create':True}"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>

                        </group>
                    </group>
                    <notebook>
                        <page string="Documents" id="docs">
                            <field name="template_doc_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                        
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="purchase_task_template_tree_view" model="ir.ui.view">
        <field name="name">purchase.task.template.tree.view</field>
        <field name="model">purchase.task.template</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Task Template">
                <field name="name"/>
                <field name="requisition_type_id" />
                <field name="user_id" optional="show" widget="many2one_avatar_user"/>
                <field name="stage_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <record id="action_purchase_task_template" model="ir.actions.act_window">
        <field name="name">Purchase Milestones</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.task.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create purchase template for tasks
            </p><p>
                Use templates to create milestone.
            </p>
        </field>
    </record>

    <menuitem
            id="menu_purchases_in_config_project_task" name="Project Templalte"
            parent="purchase.menu_purchase_config" sequence="100"/>
    
    <menuitem id="purchase_task_template_menu" action="action_purchase_task_template" parent="menu_purchases_in_config_project_task" sequence="1" name="Milestone" groups="purchase.group_purchase_manager"/>
    
            <menuitem action="project.open_task_type_form" id="menu_purchase_tasks_project_config_project" name="Stages" parent="menu_purchases_in_config_project_task" sequence="3" groups="purchase.group_purchase_manager,base.group_no_one"/>

</odoo>
