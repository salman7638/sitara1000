<odoo>
    <data>
        <record id="view_move_form_inherit_milestone" model="ir.ui.view">
            <field name="name">view.move_form.inherit.milestone</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="milestone_purchase_id" invisible="1"/>
                    <field name="allow_picking" invisible="1"/>
                    <field name="task_id" attrs="{'invisible':[('allow_picking','=',False)],'required':[('allow_picking','!=',False)]}" options="{'no_create':True,'no_open':True}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>